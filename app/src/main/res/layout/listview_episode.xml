<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/thumbnail"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:src="@drawable/tom"

        app:siBorderColor="@color/colorPrimary"
        app:siBorderWidth="2dp"
        app:siRadius="2dp"
        app:siSquare="true"
        tools:ignore="RtlHardcoded"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/title"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/textColortext"
        android:singleLine="true"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:text="Tom &amp; Jerry"
        app:layout_constraintLeft_toRightOf="@+id/imageView_see"
        android:layout_marginLeft="31dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/count"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="Views:200"
        android:singleLine="true"
        android:textColor="@color/textColorView"
        android:textSize="10dp"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.36"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/title"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/imageView_see"
        android:layout_width="27dp"
        android:layout_height="47dp"
        android:tint="@color/textColortext"
        app:srcCompat="@drawable/eye"
        tools:ignore="ContentDescription,RtlHardcoded"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>