<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context="com.example.hamza.karton.ListActivity">

    <ListView
        android:id="@+id/listView_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_add_fav" />

    <io.vov.vitamio.widget.VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:ignore="RtlHardcoded"
        android:layout_below="@+id/textViewMain"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="39dp"
        android:layout_toStartOf="@+id/textView_episode"
        android:text="TextView"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listView_detail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="11dp"
        android:background="@color/colorPrimaryDark"
        android:text="No Of Episode"
        android:textColor="@color/textColorfav"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/textView_add_fav"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/videoView"
        android:layout_alignParentStart="true"
        android:background="@color/textColor"
        android:padding="5dp"
        android:text="Add To Favourite"
        android:textColor="@color/textColorfav"
        tools:ignore="HardcodedText,RtlHardcoded" />


</RelativeLayout>
