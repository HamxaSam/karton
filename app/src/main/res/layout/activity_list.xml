<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.hamza.karton.ListActivity">

    <io.vov.vitamio.widget.VideoView
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:id="@+id/videoView"
        android:layout_marginBottom="367dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:text="Add To Favourite"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:padding="5dp"
        android:textColor="@color/textColorfav"
        android:background="@color/textColor"
        android:id="@+id/textView_add_fav"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_alignBottom="@+id/videoView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="No Of Episode"
        android:layout_width="wrap_content"
        android:textColor="@color/textColorfav"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/textView_episode"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBottom="@+id/videoView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_add_fav"
        android:layout_alignParentEnd="true"
        android:id="@+id/listView_detail" />
</RelativeLayout>
