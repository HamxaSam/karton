<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hamza.karton.MainActivity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginBottom="25dp"
            android:textColor="@color/textColor"
            android:textSize="23sp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:layout_alignParentTop="true" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/LikeLogo"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:id="@+id/imageView_like"
        tools:ignore="ContentDescription"
        android:layout_alignBottom="@+id/imageView_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/Search"
        android:id="@+id/imageView_search"
        tools:ignore="ContentDescription"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_like"
        android:layout_toEndOf="@+id/imageView_like" />

</RelativeLayout>
