<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hamza.karton">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".helper.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="locale|orientation">
            <activity android:name=".AndroidTranslate"></activity>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListActivity" />
        <activity android:name=".favourite" />
        <activity
            android:name=".Fragments.ShareFragment"
            android:label="@string/title_activity_share_fragment"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>